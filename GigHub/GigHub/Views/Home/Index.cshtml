@model IEnumerable<GigHub.Models.Gig>

@{
    ViewBag.Title = "Home Page";
}

<ul class="gigs">
    @foreach(var g in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @g.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @g.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @g.Artist.Name
                </span>
                <span class="genre">
                    @g.Genre.Name
                </span>
                <button data-gig-id="@g.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going?</button>
            </div>
        </li>
    }
</ul>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            // button going click
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                var gigDto = { gigId: button.attr("data-gig-id") };
                $.post("/api/attendances", gigDto)
                    .done(function () {
                        button.removeClass("btn-default")
                              .addClass("btn-info")
                              .text("Going");
                    }).fail(function () {
                        alert("Fail");
                    });
            });
        });
    </script>
}
